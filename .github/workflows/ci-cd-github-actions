name: CI/CD - GitHub Actions

on:
  push:
    branches:
    -develop

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    -uses: actions/checkout@v2

    -name: Use Node.js
    uses: actions/setup-node@v2
    with:
      node-version: 14

    -name: Resolver dependÃªncias
    run: yarn install

    -name: Build
    run: yarn build

    -name: Executar teste
    run: yarn test

    -name: Estabelecer uma tag
    run: |
      TIMESTAMP=$(date +%s)
      git tag build-$TIMESTAMP
      git push --tags
